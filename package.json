{
  "name": "warewoolf",
  "productName": "warewoolf",
  "version": "0.10.0",
  "description": "A simple novel writing system designed to be usable without a mouse.",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "keywords": ["writing","novel","word processor", "writerDeck", "minimalist", "text", "editor", "fiction", "story", "cyberDeck"],
  "author": "Benjamin Sloan",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "src/assets/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "warewoolf",
            "setupIcon": "src/assets/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "icon": "src/assets/icon.png",
              "setupIcon": "src/assets/icon.png"
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "docx": "^7.3.0",
    "electron-squirrel-startup": "^1.0.0",
    "nodemailer": "^6.7.5",
    "nspell": "^2.1.5",
    "quill": "^1.3.7",
    "quilljs-parser": "^1.0.12"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "^18.2.3"
  }
}
